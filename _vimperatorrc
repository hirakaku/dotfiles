" File:		_vimperatorrc
" Author:	hirakaku <hirakaku@gmail.com>

set runtimepath=~/.vimperator

set focuscontent
set hintchars=@hjklasdf
set smartcase
set hlsearch
set complete=sl

" Option: beep {{{
set visualbell
highlight Bell display: none;
" }}}

" Map: {{{
let mapleader = ','

nnoremap j 3j
nnoremap k 3k
nnoremap J <C-d>
nnoremap K <C-u>

nnoremap h <A-Left>
nnoremap l <A-Right>
nnoremap H gT
nnoremap L gt

nnoremap <BS> <Nop>

nnoremap <Leader>v :o ~/.vimperatorrc<CR>
nnoremap <Leader>V :mapc<CR>:so ~/.vimperatorrc<CR>
nnoremap <Leader>i :js modes.passAllKeys = true<CR>
" }}}

echo '.vimperatorrc was sourced'

" vim: ts=2 sw=2 ff=unix fdm=marker ft=vim:
